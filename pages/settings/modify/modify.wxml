<!--pages/settings/modify/modify.wxml-->
<view class='modify'>
  <text>已绑定手机号：{{mobile}}</text>
  <view class='table'>
    <input class='td td_l' bindinput='inputCode' placeholder='请输入验证码'/>
    <view class='td td_r' bindtap='getcode'><text>获取验证码</text></view>
  </view>
  <view>
    <text>密码由6-20位英文字母、数字或者符号组成</text>
  </view>
  <input bindinput='inputPsw' placeholder='请输入新密码' class='white ipt_psw'/>
  <button>完成修改</button>
</view>
