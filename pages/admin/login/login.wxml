<!--pages/login/login.wxml-->
<view class="login">
  <view class="section">
      <view class="section__title">用户名：</view>
      <input name="username" placeholder="请输入邮箱/手机号" bindinput="usernameInput" value='{{mobile}}' />
  </view>
  <view class="section">
      <view class="section__title">密码：</view>
      <input password type="text" value='{{password}}' name="password" placeholder="密码" bindinput="passwordInput" />
  </view>
  <view id='button'>
    <button formType="submit" bindtap="loginBtnClick">登录</button>
  </view>
  <view id="tishi">
    {{infoMess}}
  </view>
  <view id="xia">
    <view style="float:left;">
      <navigator url="../register/register">免费注册</navigator>
    </view>
  </view>
</view>
